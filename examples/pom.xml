        </profile>
        <profile>
            <id>weld2.4</id>
            <properties>
                <weld.version>2.4.2.Final</weld.version>
                <weld-spi.version>2.4.Final</weld-spi.version>
                <version.org.hibernate.api>1.0.0.Final</version.org.hibernate.api>
                <version.org.hibernate>5.0.10.Final</version.org.hibernate>
                <version.org.hibernate.validator>5.2.4.Final</version.org.hibernate.validator>
                <version.cdi-api>1.2</version.cdi-api>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.jboss.weld.se</groupId>
                    <artifactId>weld-se</artifactId>
                    <version>2.4.2.Final</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>net.oneandone.ioc-unit</groupId>
                    <artifactId>weld2-starter</artifactId>
                    <version>${project.version}</version>
                    <scope>test</scope>
                    <exclusions>
                        <exclusion>
                            <groupId>org.jboss.weld.se</groupId>
                            <artifactId>weld-se</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>weld3.0</id>
            <properties>
                <weld.version>3.0.5.Final</weld.version>
                <weld-spi.version>3.0.SP4</weld-spi.version>
                <version.org.hibernate.api>1.0.0.Final</version.org.hibernate.api>
                <version.org.hibernate>5.0.10.Final</version.org.hibernate>
                <version.org.hibernate.validator>5.2.4.Final</version.org.hibernate.validator>
                <version.cdi-api>2.0</version.cdi-api>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>net.oneandone.ioc-unit</groupId>
                    <artifactId>weld3-starter</artifactId>
                    <version>${project.version}</version>
                    <scope>test</scope>
                </dependency>
