<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="EjbTestPU">
        <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
        <class>com.oneandone.iocunitejb.entities.TestEntity1</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="EjbTestPUOperating">
        <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
        <class>com.oneandone.iocunitejb.entities.TestEntity1</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>